	div.navbar-inner
		div.container-fluid
			ul#global-nav.nav.pull-left
				a(href='/home').brand My Account
			div#blub-buttons(data-toggle='buttons-radio', style="float:left").btn-group
			button#btn-add.btn.btn-primary ADD VISUALIGHT
