			input.cosm-input(type="number", name="max", id="max", value="", placeholder="Max: 100")
			input(id="cosm", type="button", value="COSM")
		form#form-inline
			input(type="number", name="stopid", id="stopid", value="", placeholder="Stop ID")
			input(id="bustime", type="button", value="Show Bus Time");
		form#form-inline
			input(type="number", name="zip", id="zip", value="", placeholder="Zipcode")
			input(id="weather", type="button", value="Get Weather")
		form#form-inline
			input(id="open", type="button", value="Connect")
			input(id="close", type="button", value="Disconnect")

